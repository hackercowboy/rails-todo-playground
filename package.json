{
  "name": "rails-todo-playground",
  "version": "1.0.0",
  "description": "My little rails playground",
  "main": "index.js",
  "repository": "git@github.com:hackercowboy/rails-todo-playground.git",
  "author": "david@uebelacker.ch",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js app/javascript",
    "lint:fix": "eslint --fix --ext .js app/javascript",
    "test:coverage": "jest --coverage",
    "test": "jest --coverage --watch",
    "start": "bin/dev",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --loader:.js=jsx",
    "watch": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --loader:.js=jsx --watch"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "esbuild": "^0.14.23",
    "formik": "^2.2.9",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "enzyme": "^3.11.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-htm": "^0.3.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.29.2",
    "jest": "^27.5.1",
    "jest-react-hooks-shallow": "^1.5.1",
    "lcov-result-merger": "^3.1.0"
  }
}
